{
  "permissions": {
    "allow": [
      "Bash(npx:*)",
      "Bash(npm:*)",
      "Bash(npm install:*)",
      "Bash(npm test)",
      "Bash(npm run cli:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(npm run dev:*)",
      "WebFetch(domain:github.com)",
      "Bash(curl:*)",
      "Bash(grep:*)",
      "Bash(git commit:*)",
      "WebFetch(domain:ui.shadcn.com)",
      "WebFetch(domain:medium.com)",
      "WebSearch"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format"
          }
        ]
      },
      {
        "matcher": "Update",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format"
          }
        ]
      }
    ]
  }
}