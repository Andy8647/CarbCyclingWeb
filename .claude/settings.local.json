{
  "permissions": {
    "allow": [
      "Bash(npx:*)",
      "Bash(npm:*)",
      "Bash(npm install:*)",
      "Bash(npm test)",
      "Bash(npm run cli:*)",
      "Bash(git add:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format"
          }
        ]
      }
    ]
  }
}